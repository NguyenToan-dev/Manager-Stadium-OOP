	font-weight: bold;
}

/* === Tab Widget (Dark Theme) === */
QTabWidget::pane {
    border: 1px solid #4a637d;
    border-radius: 5px;
	background-color: #34495e; /* Slightly lighter background for the pane */
}

QTabBar::tab {
    background: #2c3e50;
    border: 1px solid #4a637d;
    border-bottom: none;
    padding: 8px 20px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
	color: #bdc3c7;
	font-weight: bold;
}

QTabBar::tab:hover {
    background: #4a637d;
}

QTabBar::tab:selected {
    background: #0d6efd;
    color: #ffffff;
	border-color: #0d6efd;
}

/* === Text Edit inside Tabs === */
QTextEdit {
	background-color: #34495e; /* Match tab pane background */
	border: none;
	color: #ecf0f1; /* Light text color */
	font-size: 10pt;
}

/* === Buttons === */
QPushButton {
	background-color: #0d6efd;
	color: #ffffff;
	font-weight: bold;
	padding: 8px 16px;
	border-radius: 5px;
}

QPushButton:hover {
	background-color: #0b5ed7;
}</string>
